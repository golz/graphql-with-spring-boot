/**
GraphQL comes with its own language to write GraphQL Schemas called
Schema Definition Language (SDL).
The schema definition consists of all the API functionalities available at an endpoint.
 */
type Person {
    id: ID!,
    name: String,
    job: String,
    salary: Int
}

type Query {
    persons(count: Int):[Person]
    person(id: ID):Person
}

type Mutation {
    createPerson(name: String!, job: String, salary: Int):Person
}
